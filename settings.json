{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Edit(*)",
      "Write(*)",
      "Read(*)",
      "Skill(*)",
      "WebSearch",
      "WebFetch(*)",
      "mcp__*",

      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(bun *)",
      "Bash(yarn *)",
      "Bash(node *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(uv *)",
      "Bash(pytest *)",
      "Bash(vitest *)",
      "Bash(playwright *)",
      "Bash(cargo *)",
      "Bash(make *)",
      "Bash(mkdir *)",
      "Bash(grep *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(which *)",
      "Bash(command *)",
      "Bash(test *)",
      "Bash(echo *)",
      "Bash(tmux *)",
      "Bash(gh *)",
      "Bash(docker *)",
      "Bash(source *)",
      "Bash(brew *)",
      "Bash(scp *)",
      "Bash(ssh-keyscan *)",
      "Bash(tailscale *)",
      "Bash(/Applications/Tailscale.app/*)",
      "Bash(TMUX=*)",
      "Bash(NOTIFY_TYPE=*)",
      "Bash(flutter *)",
      "Bash(vercel *)",
      "Bash(codex *)",
      "Bash(xcrun *)",
      "Bash(lsof *)",
      "Bash(xargs kill *)",
      "Bash(curl *)",
      "Bash(open *)",
      "Bash(kill *)",
      "Bash(find *)",
      "Bash(gemini *)",
      "Bash(claude *)",
      "Bash(bash *)",
      "Bash(bash)",
      "Bash(xcode-select *)",
      "Bash(sudo xcode-select *)",
      "Bash(xcodebuild *)",
      "Bash(pod install *)",
      "Bash(koyeb *)",
      "Bash(flyctl *)",
      "Bash(opencode *)",
      "Bash(bunx *)",
      "Bash(export *)",
      "Bash(./*.sh *)",
      "Bash(./*.sh)",
      "Bash(/usr/bin/security find-generic-password *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(sudo rm *)",
      "Bash(> /dev/sda*)",
      "Bash(mkfs *)",
      "Bash(dd if=*)",
      "Read(.env)",
      "Read(.env.*)"
    ],
    "ask": [
      "Bash(git push --force*)",
      "Bash(git reset --hard*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "tool matches \"question\"",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/question-notify.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "NOTIFY_TYPE=permission ~/.claude/hooks/question-notify.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-complete-notify.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/Users/raki-1203/.bun/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\"'"
  },
  "enabledPlugins": {
    "claude-hud@claude-hud": true,
    "typescript-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "oh-my-claudecode@omc": true,
    "superpowers@claude-plugins-official": true
  },
  "language": "Korean",
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "latest",
  "teammateMode": "tmux"
}
