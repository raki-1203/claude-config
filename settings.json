{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(npm install:*)",
      "Bash(tmux source-file:*)",
      "Bash(~/.tmux.conf)",
      "Skill(claude-hud:setup)",
      "WebSearch",
      "mcp__context7__resolve-library-id"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "haiku",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-complete-notify.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-complete-notify.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "question",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/question-notify.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/Users/raki-1203/.bun/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\"'"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "firebase@claude-plugins-official": true
  },
  "language": "Korean",
  "alwaysThinkingEnabled": false,
  "promptSuggestionEnabled": false,
  "autoUpdatesChannel": "stable",
  "minimumVersion": "2.1.7"
}
